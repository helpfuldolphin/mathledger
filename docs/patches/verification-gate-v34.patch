@@ -0,0 +1,354 @@
+name: Verification Gate - V3.4 Unified Trigger & Telemetry
+
+on:
+  pull_request:
+    branches: [ integrate/ledger-v0.1, main ]
+  push:
+    branches: [ integrate/ledger-v0.1, main ]
+  workflow_dispatch:
+
+jobs:
+  verification-gate:
+    runs-on: ubuntu-latest
+    steps:
+      - uses: actions/checkout@v4
+        with:
+          fetch-depth: 0
+      
+      - uses: astral-sh/setup-uv@v1
+      
+      - name: Install dependencies
+        run: uv sync
+      
+      - name: ASCII Compliance Sweeper
+        id: ascii_check
+        run: |
+          echo "[ASCII] Checking for non-ASCII characters in verification artifacts"
+          NON_ASCII_FILES=""
+          
+          # Check docs/patches/verification-gate.yml
+          if grep -P '[^\x00-\x7F]' docs/patches/verification-gate.yml; then
+            NON_ASCII_FILES="$NON_ASCII_FILES docs/patches/verification-gate.yml"
+          fi
+          
+          # Check tools/verify_all_v3.py
+          if grep -P '[^\x00-\x7F]' tools/verify_all_v3.py; then
+            NON_ASCII_FILES="$NON_ASCII_FILES tools/verify_all_v3.py"
+          fi
+          
+          if [ -n "$NON_ASCII_FILES" ]; then
+            echo "[ABSTAIN] Non-ASCII characters found in: $NON_ASCII_FILES"
+            echo "ASCII compliance violation - gate ABSTAINS"
+            exit 2
+          else
+            echo "[PASS] ASCII compliance verified"
+          fi
+        continue-on-error: true
+      
+      - name: Run Universal Verifier V3 (Gate of Gates)
+        id: verify
+        run: |
+          mkdir -p artifacts/audit artifacts/allblue artifacts/dossier
+          uv run python tools/verify_all_v3.py \
+            --offline \
+            --verbose \
+            --audit-sync \
+            --cross-verify \
+            --allblue-gate \
+            --dossier artifacts/dossier/chain_break_dossier.json
+        continue-on-error: true
+      
+      - name: Verify Signature Chain Integrity
+        if: always()
+        run: |
+          if [ -f artifacts/audit/verification_summary.json ]; then
+            EXIT_CODE=$(jq -r '.exit_code' artifacts/audit/verification_summary.json)
+            SIGNATURE=$(jq -r '.signature' artifacts/audit/verification_summary.json)
+            
+            echo "Exit Code: $EXIT_CODE"
+            echo "Signature: $SIGNATURE"
+            
+            # Check for chain break
+            if jq -e '.audit_metadata.previous_verification.signature_valid == false' artifacts/audit/verification_summary.json > /dev/null; then
+              CHAIN_MSG=$(jq -r '.audit_metadata.previous_verification.signature_message' artifacts/audit/verification_summary.json)
+              echo "[ABSTAIN] Signature chain break detected: $CHAIN_MSG"
+              exit 2
+            fi
+            
+            # Check for timestamp regression
+            if jq -e '.audit_metadata.previous_verification.timestamp_valid == false' artifacts/audit/verification_summary.json > /dev/null; then
+              TS_MSG=$(jq -r '.audit_metadata.previous_verification.timestamp_message' artifacts/audit/verification_summary.json)
+              echo "[ABSTAIN] Timestamp regression detected: $TS_MSG"
+              exit 2
+            fi
+            
+            if [ "$EXIT_CODE" -eq 0 ]; then
+              echo "[PASS] Verifier V3 Chain Intact [$SIGNATURE]"
+              exit 0
+            else
+              echo "[FAIL] Verification failed - see summary for details"
+              exit 1
+            fi
+          else
+            echo "[ERROR] Verification summary not found"
+            exit 2
+          fi
+      
+      - name: Display Verification Summary
+        if: always()
+        run: |
+          if [ -f artifacts/audit/verification_summary.md ]; then
+            echo "## Verification V3.4 Gate Summary" >> $GITHUB_STEP_SUMMARY
+            cat artifacts/audit/verification_summary.md >> $GITHUB_STEP_SUMMARY
+          fi
+          
+          if [ -f artifacts/allblue/fleet_state.json ]; then
+            echo "" >> $GITHUB_STEP_SUMMARY
+            echo "## AllBlue Fleet State" >> $GITHUB_STEP_SUMMARY
+            echo "Fleet state frozen with dual signatures:" >> $GITHUB_STEP_SUMMARY
+            echo '```json' >> $GITHUB_STEP_SUMMARY
+            jq '{frozen_at, allblue_status, state_hash, fleet_signature}' artifacts/allblue/fleet_state.json >> $GITHUB_STEP_SUMMARY
+            echo '```' >> $GITHUB_STEP_SUMMARY
+          fi
+          
+          if [ -f artifacts/dossier/chain_break_dossier.json ]; then
+            echo "" >> $GITHUB_STEP_SUMMARY
+            echo "## Chain Break Forensic Dossier" >> $GITHUB_STEP_SUMMARY
+            echo "Chain break detected - forensic analysis:" >> $GITHUB_STEP_SUMMARY
+            echo '```json' >> $GITHUB_STEP_SUMMARY
+            jq '{chain_break_reason, signature_delta, timestamp_delta, offending_files, dossier_sha256}' artifacts/dossier/chain_break_dossier.json >> $GITHUB_STEP_SUMMARY
+            echo '```' >> $GITHUB_STEP_SUMMARY
+          fi
+      
+      - name: Post Verification Telemetry
+        if: always()
+        run: |
+          if [ -f artifacts/audit/verification_summary.json ]; then
+            echo "" >> $GITHUB_STEP_SUMMARY
+            echo "## Verification Gate Telemetry (V3.4)" >> $GITHUB_STEP_SUMMARY
+            
+            CHECKS_PASSED=$(jq -r '.telemetry.checks_passed' artifacts/audit/verification_summary.json)
+            CHECKS_TOTAL=$(jq -r '.telemetry.checks_total' artifacts/audit/verification_summary.json)
+            COVERAGE_PCT=$(jq -r '.telemetry.coverage_pct' artifacts/audit/verification_summary.json)
+            
+            if [ "$CHECKS_PASSED" == "null" ] || [ "$CHECKS_TOTAL" == "null" ] || [ "$COVERAGE_PCT" == "null" ]; then
+              echo "[ABSTAIN] Telemetry incomplete - cannot seal verification gate" >> $GITHUB_STEP_SUMMARY
+              echo "- checks_passed: ${CHECKS_PASSED:-MISSING}" >> $GITHUB_STEP_SUMMARY
+              echo "- checks_total: ${CHECKS_TOTAL:-MISSING}" >> $GITHUB_STEP_SUMMARY
+              echo "- coverage_pct: ${COVERAGE_PCT:-MISSING}" >> $GITHUB_STEP_SUMMARY
+              exit 2
+            fi
+            
+            TELEMETRY_JSON=$(jq -c '.telemetry' artifacts/audit/verification_summary.json)
+            TELEMETRY_HASH=$(echo "$TELEMETRY_JSON" | sha256sum | awk '{print $1}')
+            
+            echo "[PASS] Verification Gate Telemetry sealed \`${TELEMETRY_HASH}\`" >> $GITHUB_STEP_SUMMARY
+            echo "" >> $GITHUB_STEP_SUMMARY
+            echo "**Telemetry Metrics**:" >> $GITHUB_STEP_SUMMARY
+            echo "- Checks Passed: ${CHECKS_PASSED}/${CHECKS_TOTAL}" >> $GITHUB_STEP_SUMMARY
+            echo "- Coverage: ${COVERAGE_PCT}%" >> $GITHUB_STEP_SUMMARY
+            echo "" >> $GITHUB_STEP_SUMMARY
+            echo '```json' >> $GITHUB_STEP_SUMMARY
+            echo "$TELEMETRY_JSON" | jq '.' >> $GITHUB_STEP_SUMMARY
+            echo '```' >> $GITHUB_STEP_SUMMARY
+          fi
+      
+      - name: Upload Verification Artifacts
+        uses: actions/upload-artifact@v4
+        if: always()
+        with:
+          name: verification-gate-${{ github.run_number }}
+          path: |
+            artifacts/audit/verification_summary.json
+            artifacts/audit/verification_summary.md
+            artifacts/audit/exit_code_map.json
+            artifacts/audit/repro_*.sh
+            artifacts/allblue/fleet_state.json
+            artifacts/dossier/chain_break_dossier.json
+          retention-days: 90
+      
+      - name: Validate AllBlue Gate Requirements
+        if: always()
+        run: |
+          if [ -f artifacts/allblue/fleet_state.json ]; then
+            # Verify dual signatures present
+            STATE_HASH=$(jq -r '.state_hash' artifacts/allblue/fleet_state.json)
+            FLEET_SIG=$(jq -r '.fleet_signature' artifacts/allblue/fleet_state.json)
+            CANON=$(jq -r '.canonicalization' artifacts/allblue/fleet_state.json)
+            
+            if [ "$CANON" != "RFC 8785" ]; then
+              echo "[FAIL] AllBlue Gate: RFC 8785 canonicalization not enabled"
+              exit 1
+            fi
+            
+            if [ -z "$STATE_HASH" ] || [ "$STATE_HASH" == "null" ]; then
+              echo "[FAIL] AllBlue Gate: state_hash missing"
+              exit 1
+            fi
+            
+            if [ -z "$FLEET_SIG" ] || [ "$FLEET_SIG" == "null" ]; then
+              echo "[FAIL] AllBlue Gate: fleet_signature missing"
+              exit 1
+            fi
+            
+            echo "[PASS] AllBlue Gate: Dual signatures validated"
+            echo "  State Hash: $STATE_HASH"
+            echo "  Fleet Signature: $FLEET_SIG"
+          else
+            echo "[INFO] AllBlue Gate: No fleet state (verification may have failed)"
+          fi
+      
+      - name: Post PR Comment on Chain Break
+        if: github.event_name == 'pull_request' && always()
+        run: |
+          if [ -f artifacts/dossier/chain_break_dossier.json ]; then
+            DOSSIER_SHA256=$(jq -r '.dossier_sha256' artifacts/dossier/chain_break_dossier.json)
+            CHAIN_BREAK_REASON=$(jq -r '.chain_break_reason' artifacts/dossier/chain_break_dossier.json)
+            PRIOR_SIG=$(jq -r '.prior_verification.signature' artifacts/dossier/chain_break_dossier.json | cut -c1-16)
+            CURRENT_SIG=$(jq -r '.current_verification.signature' artifacts/dossier/chain_break_dossier.json | cut -c1-16)
+            OFFENDING_FILES=$(jq -r '.offending_files | join(", ")' artifacts/dossier/chain_break_dossier.json)
+            TIMESTAMP_DELTA=$(jq -r '.timestamp_delta.delta_seconds' artifacts/dossier/chain_break_dossier.json)
+            CHECKS_PASSED=$(jq -r '.verification_checks.passed' artifacts/dossier/chain_break_dossier.json)
+            CHECKS_TOTAL=$(jq -r '.verification_checks.total' artifacts/dossier/chain_break_dossier.json)
+            REPRO_SCRIPT_SHA=$(echo "$DOSSIER_SHA256" | cut -c1-16)
+            
+            RUN_URL="https://github.com/${{ github.repository }}/actions/runs/${{ github.run_id }}"
+            ARTIFACT_URL="${RUN_URL}#artifacts"
+            
+            # Generate ASCII chart of checks passed over last 10 runs
+            ASCII_CHART=""
+            if [ -f artifacts/audit/verification_dossiers.jsonl ]; then
+              # Get max from last JSONL entry (dynamic scaling)
+              MAX_CHECKS=$(tail -1 artifacts/audit/verification_dossiers.jsonl | jq -r '.checks_total // 8')
+              ASCII_CHART=$(tail -10 artifacts/audit/verification_dossiers.jsonl | jq -r '.checks_passed' | awk -v max=$MAX_CHECKS '
+                BEGIN { print "Checks Passed (last 10 runs):" }
+                { 
+                  bars = int($1 * 10 / max)
+                  printf "%2d/%-2d [", $1, max
+                  for(i=0; i<bars; i++) printf "#"
+                  for(i=bars; i<10; i++) printf "-"
+                  printf "]\n"
+                }
+              ')
+            else
+              ASCII_CHART="No historical data available"
+            fi
+            
+            # Check for existing comment with tag
+            EXISTING_COMMENT_ID=$(gh pr view ${{ github.event.pull_request.number }} --json comments --jq '.comments[] | select(.body | contains("[VERIFICATION-GATE]")) | .id' | head -1)
+            
+            COMMENT_BODY="<!-- [VERIFICATION-GATE] -->
+## Verification Gate V3.2: Chain Break Detected
+
+**Status**: [ABSTAIN] Merge blocked due to chain integrity violation
+
+---
+
+### Forensic Summary
+
+**Dossier SHA256**: [\`${DOSSIER_SHA256}\`](${ARTIFACT_URL})
+
+**Chain Break Reason**:
+\`\`\`
+${CHAIN_BREAK_REASON}
+\`\`\`
+
+**Signature Delta**:
+- Prior: \`${PRIOR_SIG}...\`
+- Current: \`${CURRENT_SIG}...\`
+
+**Timestamp Delta**: ${TIMESTAMP_DELTA}s
+
+**Verification Checks**: ${CHECKS_PASSED}/${CHECKS_TOTAL} passed
+
+**Offending Files**: ${OFFENDING_FILES}
+
+**Repro Script**: \`repro_${REPRO_SCRIPT_SHA}.sh\` (included in artifact)
+
+---
+
+### Historical Trend
+
+\`\`\`
+${ASCII_CHART}
+\`\`\`
+
+---
+
+### Forensic Dossier
+
+**Download**: [verification-gate-${{ github.run_number }}](${ARTIFACT_URL})
+
+The complete forensic analysis includes:
+- Prior/current signatures with delta analysis
+- Timestamp ordering validation
+- Offending files (git diff)
+- Verification check summary
+- RFC 8785 canonical JSON
+
+---
+
+### Actionable Commands
+
+**Re-run verification locally**:
+\`\`\`bash
+# Clean verification (no chain break)
+python tools/verify_all_v3.py --offline --audit-sync --cross-verify --allblue-gate
+
+# With dossier generation
+python tools/verify_all_v3.py --offline --audit-sync --cross-verify --allblue-gate \\
+  --dossier artifacts/dossier/chain_break_dossier.json
+
+# Compare with prior dossier
+python tools/verify_all_v3.py --offline --audit-sync --cross-verify --allblue-gate \\
+  --dossier artifacts/dossier/chain_break_dossier.json \\
+  --dossier-diff ${DOSSIER_SHA256}
+\`\`\`
+
+**Restore chain integrity**:
+1. Download the [dossier artifact](${ARTIFACT_URL}) from this workflow run
+2. Investigate the chain break reason and offending files
+3. Resolve the underlying issue (signature tampering, timestamp regression, etc.)
+4. Re-run verification locally to confirm fix
+5. Push changes and re-trigger CI
+
+**View workflow logs**: [Run #${{ github.run_number }}](${RUN_URL})
+
+---
+
+**Fleet Directive**: Proof-or-Abstain 路 RFC8785 路 Determinism > speed 路 Domain separation 路 Sealed pass-lines"
+
+            # Post or update comment
+            if [ -n "$EXISTING_COMMENT_ID" ]; then
+              echo "[INFO] Updating existing comment ID: $EXISTING_COMMENT_ID"
+              gh api \
+                --method PATCH \
+                -H "Accept: application/vnd.github+json" \
+                "/repos/${{ github.repository }}/issues/comments/$EXISTING_COMMENT_ID" \
+                -f body="${COMMENT_BODY}"
+            else
+              echo "[INFO] Creating new comment"
+              gh pr comment ${{ github.event.pull_request.number }} --body "${COMMENT_BODY}"
+            fi
+          fi
+        env:
+          GH_TOKEN: ${{ github.token }}
+      
+      - name: Auto-commit verification results on main push
+        if: github.ref == 'refs/heads/integrate/ledger-v0.1' && github.event_name == 'push' && success()
+        run: |
+          git config --local user.email "devin-ai-integration[bot]@users.noreply.github.com"
+          git config --local user.name "Devin AI"
+          
+          if [ -d "artifacts/audit" ] || [ -d "artifacts/allblue" ]; then
+            git add artifacts/audit/ artifacts/allblue/ 2>/dev/null || true
+            if ! git diff --cached --quiet; then
+              git commit -m "ci: update verification gate results [skip ci]
+              
+              Auto-generated verification V3 gate results.
+              - verification_summary.json: RFC 8785 signed results
+              - verification_summary.md: CI-friendly summary
+              - fleet_state.json: AllBlue frozen state with dual signatures"
+              git push origin integrate/ledger-v0.1
+            fi
+          fi
