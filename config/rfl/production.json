{
  "experiment_name": "Reflexive Metabolism Gate - Production",
  "metrologist": "Claude M — The Reflexive Metrologist",
  "version": "1.0.0",
  "bootstrap_config": {
    "method": "bca",
    "n_experiments": 40,
    "n_replicates": 10000,
    "confidence_level": 0.95,
    "seed": 42
  },
  "pass_criteria": {
    "coverage_lower_bound": 0.92,
    "uplift_lower_bound": 1.0,
    "description": "PASS iff coverage₉₅lower ≥ 0.92 AND uplift₉₅lower > 1.0"
  },
  "data_source": {
    "mode": "historical",
    "path": "docs/progress.md",
    "fallback_to_db": true,
    "db_config": {
      "host": "localhost",
      "port": 5432,
      "database": "mathledger",
      "user": "ml",
      "password": null
    }
  },
  "metrics": [
    {
      "name": "success_rate",
      "baseline": 0.5,
      "weight": 1.0,
      "experiments": 10
    },
    {
      "name": "proof_velocity",
      "baseline": 1.0,
      "weight": 2.0,
      "experiments": 10
    },
    {
      "name": "statement_growth",
      "baseline": 1.0,
      "weight": 2.0,
      "experiments": 10
    },
    {
      "name": "efficiency",
      "baseline": 0.5,
      "weight": 1.0,
      "experiments": 5
    },
    {
      "name": "density",
      "baseline": 0.1,
      "weight": 1.5,
      "experiments": 5
    }
  ],
  "output": {
    "artifacts_dir": "artifacts/rfl",
    "results_file": "rfl_production_results.json",
    "coverage_file": "rfl_coverage.json",
    "visualization_file": "rfl_curves.png"
  },
  "commit_template": {
    "pass": "[PASS] Reflexive Metabolism Verified coverage≥{coverage:.3f} uplift>{uplift:.2f}",
    "fail": "[FAIL] Reflexive Metabolism Insufficient coverage={coverage:.3f} uplift={uplift:.2f}",
    "abstain": "[ABSTAIN] Reflexive Metabolism Gate — Infrastructure offline"
  }
}
