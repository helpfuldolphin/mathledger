{
  "experiment_name": "RFL Gate - Quick Test",
  "metrologist": "Claude M — The Reflexive Metrologist",
  "version": "1.0.0",
  "bootstrap_config": {
    "method": "percentile",
    "n_experiments": 10,
    "n_replicates": 1000,
    "confidence_level": 0.95,
    "seed": 42
  },
  "pass_criteria": {
    "coverage_lower_bound": 0.92,
    "uplift_lower_bound": 1.0,
    "description": "PASS iff coverage₉₅lower ≥ 0.92 AND uplift₉₅lower > 1.0"
  },
  "data_source": {
    "mode": "historical",
    "path": "docs/progress.md",
    "fallback_to_db": false
  },
  "metrics": [
    {
      "name": "proof_velocity",
      "baseline": 1.0,
      "weight": 2.0,
      "experiments": 5
    },
    {
      "name": "statement_growth",
      "baseline": 1.0,
      "weight": 2.0,
      "experiments": 5
    }
  ],
  "output": {
    "artifacts_dir": "artifacts/rfl",
    "results_file": "rfl_quick_results.json",
    "coverage_file": "rfl_quick_coverage.json",
    "visualization_file": "rfl_quick_curves.png"
  },
  "commit_template": {
    "pass": "[PASS] RFL Quick Test",
    "fail": "[FAIL] RFL Quick Test"
  }
}
