{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://mathledger.org/schemas/ledger_snapshot.schema.json",
  "title": "Ledger Snapshot",
  "description": "Versioned snapshot of ledger state including block hashes and Merkle roots.",
  "x-version": "1.0.0",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of this snapshot schema (MAJOR.MINOR.PATCH)"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when this snapshot was generated"
    },
    "chain_id": {
      "type": "string",
      "description": "Unique identifier for this blockchain"
    },
    "height": {
      "type": "integer",
      "minimum": 0,
      "description": "Current height of the blockchain"
    },
    "last_block_hash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$",
      "description": "SHA-256 hash of the most recent block"
    },
    "blocks": {
      "type": "array",
      "description": "List of all blocks in the chain",
      "items": {
        "type": "object",
        "properties": {
          "height": {
            "type": "integer",
            "minimum": 0,
            "description": "Block height (0-indexed)"
          },
          "hash": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$",
            "description": "SHA-256 hash of this block"
          },
          "prev_hash": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$",
            "description": "SHA-256 hash of the previous block (empty string for genesis)"
          },
          "merkle_root": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$",
            "description": "Merkle root of statements in this block"
          }
        },
        "required": ["height", "hash", "prev_hash", "merkle_root"],
        "additionalProperties": false
      }
    }
  },
  "required": ["version", "timestamp", "chain_id", "height", "last_block_hash", "blocks"],
  "additionalProperties": false
}
