{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://mathledger.io/schemas/toolchain_manifest.schema.json",
  "title": "Toolchain Manifest Schema",
  "description": "Normal-form schema for experiment toolchain provenance manifests",
  "type": "object",
  "required": [
    "schema_version",
    "experiment_id",
    "timestamp",
    "provenance_level",
    "uv_lock_hash"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0.0",
      "description": "Schema version (fixed)"
    },
    "experiment_id": {
      "type": "string",
      "pattern": "^CAL-EXP-[0-9]+$",
      "description": "Experiment identifier"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 UTC timestamp of manifest generation"
    },
    "provenance_level": {
      "type": "string",
      "enum": ["full", "partial"],
      "description": "Full = all toolchain hashes recorded at runtime. Partial = backfilled from indirect evidence."
    },
    "toolchain_fingerprint": {
      "type": ["string", "null"],
      "pattern": "^[a-f0-9]{64}$",
      "description": "Combined SHA-256 fingerprint. Required if provenance_level=full, null if partial."
    },
    "uv_lock_hash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$",
      "description": "SHA-256 of uv.lock (Python dependencies)"
    },
    "lean_toolchain_hash": {
      "type": ["string", "null"],
      "pattern": "^[a-f0-9]{64}$",
      "description": "SHA-256 of lean-toolchain file. Null if partial provenance."
    },
    "lake_manifest_hash": {
      "type": ["string", "null"],
      "pattern": "^[a-f0-9]{64}$",
      "description": "SHA-256 of lake-manifest.json. Null if partial provenance."
    },
    "toolchain": {
      "type": ["object", "null"],
      "description": "Detailed toolchain snapshot. Null if partial provenance.",
      "properties": {
        "schema_version": { "type": "string" },
        "fingerprint": { "type": "string" },
        "python": {
          "type": "object",
          "properties": {
            "version": { "type": "string" },
            "uv_version": { "type": "string" },
            "uv_lock_hash": { "type": "string" }
          },
          "required": ["version", "uv_version", "uv_lock_hash"]
        },
        "lean": {
          "type": "object",
          "properties": {
            "version": { "type": "string" },
            "toolchain_hash": { "type": "string" },
            "lake_manifest_hash": { "type": "string" }
          },
          "required": ["version", "toolchain_hash", "lake_manifest_hash"]
        }
      }
    },
    "git_evidence": {
      "type": ["object", "null"],
      "description": "Git-based evidence for partial provenance backfills",
      "properties": {
        "commit_range": {
          "type": "string",
          "description": "Git commit range checked (e.g., 'f7f80e9..caf6f70')"
        },
        "lean_toolchain_unchanged": {
          "type": "boolean",
          "description": "True if lean-toolchain had no commits in range"
        },
        "lake_manifest_unchanged": {
          "type": "boolean",
          "description": "True if lake-manifest.json had no commits in range"
        },
        "verification_command": {
          "type": "string",
          "description": "Git command used for verification"
        }
      }
    },
    "run_metadata_ref": {
      "type": ["object", "null"],
      "description": "Reference to experiment run metadata",
      "properties": {
        "verdict": { "type": "string" },
        "timestamp": { "type": "string" }
      }
    },
    "_meta": {
      "type": ["object", "null"],
      "description": "Non-semantic metadata (notes, generator info)",
      "properties": {
        "generator": { "type": "string" },
        "note": { "type": "string" }
      }
    }
  },
  "allOf": [
    {
      "if": {
        "properties": { "provenance_level": { "const": "full" } }
      },
      "then": {
        "required": ["toolchain_fingerprint", "lean_toolchain_hash", "lake_manifest_hash", "toolchain"]
      }
    },
    {
      "if": {
        "properties": { "provenance_level": { "const": "partial" } }
      },
      "then": {
        "required": ["git_evidence"]
      }
    }
  ]
}
