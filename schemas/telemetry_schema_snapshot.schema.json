{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://mathledger.org/schemas/telemetry_schema_snapshot.schema.json",
  "title": "Telemetry Schema Snapshot",
  "description": "Versioned snapshot of telemetry event schemas for drift detection.",
  "x-version": "1.0.0",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of this snapshot schema (MAJOR.MINOR.PATCH)"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when this snapshot was generated"
    },
    "events": {
      "type": "object",
      "description": "Mapping of event names to their schemas",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string",
            "description": "Human-readable description of the event"
          },
          "schema": {
            "type": "object",
            "description": "JSON Schema definition for the event payload",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["object"]
              },
              "properties": {
                "type": "object",
                "additionalProperties": {
                  "type": "object"
                }
              },
              "required": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "required": ["type", "properties"]
          }
        },
        "required": ["description", "schema"],
        "additionalProperties": false
      }
    }
  },
  "required": ["version", "timestamp", "events"],
  "additionalProperties": false
}
