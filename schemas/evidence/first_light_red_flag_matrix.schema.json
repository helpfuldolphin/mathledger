{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://mathledger.local/schemas/evidence/first_light_red_flag_matrix.schema.json",
    "title": "First Light Red Flag Matrix",
    "description": "Matrix detailing red flags observed during the P3 first-light run.",
    "type": "object",
    "properties": {
        "schema_version": {
            "type": "string",
            "description": "Version identifier for the red flag matrix envelope."
        },
        "run_id": {
            "type": "string",
            "description": "Identifier for the first-light run the matrix was derived from."
        },
        "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp for when the matrix was compiled."
        },
        "total_cycles": {
            "type": "integer",
            "minimum": 0
        },
        "flags": {
            "type": "array",
            "description": "List of red flag entries keyed by subsystem.",
            "items": {
                "type": "object",
                "properties": {
                    "code": {
                        "type": "string"
                    },
                    "cycle": {
                        "type": "integer",
                        "minimum": 0
                    },
                    "subsystem": {
                        "type": "string"
                    },
                    "severity": {
                        "type": "string",
                        "enum": [
                            "INFO",
                            "WARNING",
                            "CRITICAL"
                        ]
                    },
                    "description": {
                        "type": "string"
                    },
                    "mitigation": {
                        "type": "string"
                    }
                },
                "required": [
                    "code",
                    "cycle",
                    "severity"
                ],
                "additionalProperties": true
            },
            "default": []
        },
        "summary": {
            "type": "object",
            "properties": {
                "total_flags": {
                    "type": "integer",
                    "minimum": 0
                },
                "by_severity": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "integer",
                        "minimum": 0
                    }
                },
                "by_type": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "integer",
                        "minimum": 0
                    }
                },
                "max_streaks": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "integer",
                        "minimum": 0
                    }
                },
                "hypothetical_abort": {
                    "type": "object",
                    "properties": {
                        "abort_cycle": {
                            "type": [
                                "integer",
                                "null"
                            ]
                        },
                        "abort_reason": {
                            "type": [
                                "string",
                                "null"
                            ]
                        },
                        "would_abort": {
                            "type": "boolean"
                        }
                    },
                    "required": [
                        "would_abort"
                    ],
                    "additionalProperties": false
                }
            },
            "required": [
                "total_flags"
            ],
            "additionalProperties": true
        }
    },
    "required": [
        "run_id",
        "timestamp",
        "total_cycles",
        "summary",
        "flags"
    ],
    "additionalProperties": false
}
