{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://mathledger.local/schemas/evidence/first_light_synthetic_raw.schema.json",
    "title": "First Light Synthetic Raw",
    "description": "Per-cycle raw capture for the P3 first-light synthetic evidence artifact.",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "cycle": {
                "type": "integer",
                "minimum": 0
            },
            "timestamp": {
                "type": "string",
                "format": "date-time"
            },
            "runner": {
                "type": "object",
                "properties": {
                    "success": {
                        "type": "boolean"
                    },
                    "depth": {
                        "type": "integer",
                        "minimum": 0
                    }
                },
                "required": [
                    "success",
                    "depth"
                ],
                "additionalProperties": false
            },
            "usla_state": {
                "type": "object",
                "properties": {
                    "H": {
                        "type": "number"
                    },
                    "rho": {
                        "type": "number"
                    },
                    "tau": {
                        "type": "number"
                    },
                    "beta": {
                        "type": "number"
                    },
                    "in_omega": {
                        "type": "boolean"
                    }
                },
                "required": [
                    "H",
                    "rho",
                    "tau",
                    "beta",
                    "in_omega"
                ],
                "additionalProperties": false
            },
            "governance": {
                "type": "object",
                "properties": {
                    "real_blocked": {
                        "type": "boolean"
                    },
                    "sim_blocked": {
                        "type": "boolean"
                    },
                    "aligned": {
                        "type": "boolean"
                    }
                },
                "required": [
                    "real_blocked",
                    "sim_blocked",
                    "aligned"
                ],
                "additionalProperties": false
            },
            "hard_ok": {
                "type": "boolean"
            },
            "abstained": {
                "type": "boolean"
            },
            "identity_stable": {
                "type": "boolean"
            }
        },
        "required": [
            "cycle",
            "timestamp",
            "runner",
            "usla_state",
            "governance",
            "hard_ok",
            "abstained"
        ],
        "additionalProperties": false
    }
}
