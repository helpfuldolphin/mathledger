# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# YAML files (enhanced)
[*.{yml,yaml}]
indent_style = space
indent_size = 2
max_line_length = 120

# JSON files (enhanced)
[*.json]
indent_style = space
indent_size = 2
max_line_length = 120

# Markdown files (enhanced)
[*.md]
trim_trailing_whitespace = false
max_line_length = off
insert_final_newline = true

# PowerShell files
[*.ps1]
indent_style = space
indent_size = 4

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2

# SQL files (including migrations)
[*.sql]
indent_style = space
indent_size = 2
max_line_length = 100

# SQL migration files (more specific formatting)
[migrations/*.sql]
indent_style = space
indent_size = 2
max_line_length = 100

# Lean files
[*.lean]
indent_style = space
indent_size = 2
max_line_length = 100

# Lean project files
[lakefile.lean]
indent_style = space
indent_size = 2
max_line_length = 100

# Lean job files
[**/Jobs/*.lean]
indent_style = space
indent_size = 2
max_line_length = 100

# Configuration files
[*.{ini,cfg,conf}]
indent_style = space
indent_size = 2

# Makefile
[Makefile]
indent_style = tab
indent_size = 4

# Docker files
[Dockerfile*]
indent_style = space
indent_size = 2
max_line_length = 120

# Docker compose files
[docker-compose*.yml]
indent_style = space
indent_size = 2
max_line_length = 120

# Git files
[.git*]
indent_style = space
indent_size = 2
